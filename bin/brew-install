#! /usr/bin/env sh

# Install Homebrew
/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

brew install python@2 python3
brew install zsh zsh-completions git tmux vim neovim wget rbenv ruby-build
brew install caskroom/cask/brew-cask
brew link openssl --force

brew tap caskroom/versions

brew cask install java6 java7 java intellij-idea intellij-idea-ce
brew cask install firefox google-chrome
brew cask install alfred iterm2 vagrant 1password virtualbox skitch caffeine
brew cask install visual-studio-code postman insomnia
brew cask install slack telegram spotify

brew tap caskroom/fonts
brew cask install font-fira-code
