exec ./brew-install

# Configure ZSH shell
chsh -s $(which zsh)
sh -c "$(curl -fsSL https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"

# Copy all dot files to home directory
# TODO  potential solution? - find ../src -iname '.*' -exec cp -v {} $HOME \;
echo "Starting to copy files"
for file in ../src/.*; do
  if [ -f "${file}" ]; then
    cp -v $file ~/
  fi
done

# Copy scripts
for file in ../scripts/*; do
  if [ -f "${file}" ]; then
    cp -v $file /usr/local/bin/
  fi
done

# Install NVM, and latest node
curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.34.0/install.sh | bash
nvm install node # "node" is an alias for the latest version

# Command prompt for ZSH
npm install --global pure-prompt

# Set up Neovim and plugins with Vundle
mkdir -p ~/.config/nvim/bundle
echo "source ~/.nvimrc" > ~/.config/nvim/init.vim

# https://ricostacruz.com/til/neovim-with-python-on-osx
pip2 install neovim --upgrade
pip3 install neovim --upgrade

# Install vim-plug for plugin management
curl -fLo ~/.local/share/nvim/site/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
